        tools:replace="android:icon"
        tools:targetApi="31">
        <activity
            android:name=".Activity.QRScanActivity"
            android:exported="false"
            android:theme="@style/Theme.QuizAPP"/>
        <activity
            android:name=".Activity.SettingActivity"
            android:exported="false"
